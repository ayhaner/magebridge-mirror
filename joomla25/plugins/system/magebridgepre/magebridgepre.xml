<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>System - MageBridge Preloader</name>
	<author>Yireo</author>
	<creationDate>August 2012</creationDate>
	<copyright>Copyright (C) 2012 Yireo.com. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@yireo.com</authorEmail>
	<authorUrl>www.yireo.com</authorUrl>
	<version>1.7.4276</version>
	<description>MageBridge System Plugin to be configured with a very low ordering</description>

	<files>
		<filename plugin="magebridgepre">magebridgepre.php</filename>
		<filename>index.html</filename>
	</files>

    <config>
		<fields name="params">
			<fieldset name="basic">
		        <field name="override_modulehelper" type="radio" default="1" label="Override module-helper" description="">
        			<option value="0">No</option>
        			<option value="1">Yes</option>
		        </field>
		        <field name="postlogin_userevents" type="radio" default="0" label="Throw events at postlogin" description="">
        			<option value="0">No</option>
        			<option value="1">Yes</option>
		        </field>
            </fieldset>
    	</fields>
    </config>
</extension>
