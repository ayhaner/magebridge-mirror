<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>System - MageBridge Lightbox</name>
	<author>Yireo</author>
	<creationDate>September 2012</creationDate>
	<copyright>Copyright (C) 2012 Yireo.com. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@yireo.com</authorEmail>
	<authorUrl>www.yireo.com</authorUrl>
	<version>1.0.0</version>
	<description>Lightbox solutions for MageBridge</description>

	<files>
		<filename plugin="magebridgelightbox">magebridgelightbox.php</filename>
		<filename>index.html</filename>
	</files>

    <media>
        <folder>plg_magebridgelightbox</folder>
    </media>

    <config>
		<fields name="params">
			<fieldset name="basic">
		        <field name="library" type="list" default="lightbox2" label="Library" description="">
        			<option value="lightbox2">Lightbox2 (jQuery)</option>
        			<option value="lightview">Lightview (jQuery)</option>
        			<option value="easybox">Easybox (jQuery)</option>
        			<option value="prettyphoto">PrettyPhoto (jQuery)</option>
        			<option value="pirobox">Pirobox (jQuery)</option>
	        	</field>
            </fieldset>
        </fields>
    </config>
</extension>

