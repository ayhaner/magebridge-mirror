	<authorUrl>www.yireo.com</authorUrl>
	<version>1.7.4276</version>
	<description>MOD_MAGEBRIDGE_SWITCHER_DESC</description>

	<files>
		<filename module="mod_magebridge_switcher">mod_magebridge_switcher.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

    <languages>
        <language tag="en-GB">en-GB.mod_magebridge_switcher.ini</language>
        <language tag="en-GB">en-GB.mod_magebridge_switcher.sys.ini</language>
    </languages>

	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_magebridge/fields">
        		<field name="store_id" type="storegroup" default="" label="MOD_MAGEBRIDGE_SWITCHER_FIELD_STORE_ID" description="MOD_MAGEBRIDGE_SWITCHER_FIELD_STORE_ID_DESC" />
    		    <field name="layout" type="list" default="default" label="MOD_MAGEBRIDGE_SWITCHER_FIELD_LAYOUT" description="MOD_MAGEBRIDGE_SWITCHER_FIELD_LAYOUT_DESC">
	    		    <option value="default">MOD_MAGEBRIDGE_SWITCHER_FIELD_LAYOUT_OPTION_DEFAULT</option>
		        </field>
           	</fieldset>
			<fieldset name="advanced">
        		<field name="moduleclass_sfx" type="text" default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
        		<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
        			<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
		        </field>
        	</fieldset>
        </fields>
	</config>
</extension>
