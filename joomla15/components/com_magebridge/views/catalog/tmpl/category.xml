<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Category">
		<message>
			<![CDATA[This layout shows a specific Magento category.]]>
		</message>
	</layout>

	<state>
		<name>Category</name>
		<description>This layout shows a specific Magento category.</description>
		<url addpath="/administrator/components/com_magebridge/elements">
		    <param name="request" type="category" return="id" default="" label="Magento Category" />
		</url>
		<params addpath="/administrator/components/com_magebridge/elements">
		    <param name="mode" type="list" label="Category Mode">
		        <option value="">Default</option>
		        <option value="grid">Grid</option>
		        <option value="list">List</option>
		    </param>
		</params>
		<advanced addpath="/administrator/components/com_magebridge/elements">
		    <param name="store" type="store" default="" label="Magento Store" description="Use this to overwrite the Magento store-scope" />
		</advanced>
	</state>
</metadata>
