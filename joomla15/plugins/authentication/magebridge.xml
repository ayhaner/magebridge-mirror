	<version>1.7.4276</version>
	<description>Handles user authentication for MageBridge</description>
	<files>
		<filename plugin="magebridge">magebridge.php</filename>
	</files>
	<params>
		<param name="lookup_email" type="radio" default="0" label="Lookup email" description="Lookup the email-address to authenticate with. Set it to no, to use the entered username instead.">
