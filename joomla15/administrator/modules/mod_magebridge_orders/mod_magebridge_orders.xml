<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" client="administrator" method="upgrade">
	<name>MageBridge: Latest Orders</name>
	<author>Yireo</author>
	<creationDate>March 2009</creationDate>
	<copyright>Copyright (C) 2009 Yireo.com. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>development@yireo.com</authorEmail>
	<authorUrl>www.yireo.com</authorUrl>
	<version>1.7.4276</version>
	<description>This module shows a list of the latest Magento orders</description>
	<files>
		<filename module="mod_magebridge_orders">mod_magebridge_orders.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

    <languages>
        <language tag="en-GB">en-GB.mod_magebridge_orders.ini</language>
    </languages>

	<params addpath="/administrator/components/com_magebridge/elements">
		<param name="count" type="text" default="5" label="Number of orders" description="" />
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
			<option value="2">Enable caching</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	</params>
</install>
