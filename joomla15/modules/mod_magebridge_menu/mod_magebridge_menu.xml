<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>MageBridge: Category Menu</name>
	<author>Yireo</author>
	<creationDate>March 2009</creationDate>
	<copyright>Copyright (C) 2009 Yireo.com. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>development@yireo.com</authorEmail>
	<authorUrl>www.yireo.com</authorUrl>
	<version>1.7.4276</version>
	<description>This module shows a menu of Magento categories</description>
	<files>
		<filename module="mod_magebridge_menu">mod_magebridge_menu.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

    <languages>
        <language tag="en-GB">en-GB.mod_magebridge_menu.ini</language>
    </languages>

	<params addpath="/administrator/components/com_magebridge/elements">
		<param name="root" type="category" default="0" return="id" allow_root="1" label="Root catalog" description="MySQL ID of root catalog" />
		<param name="levels" type="list" default="1" label="Levels" description="Number of levels to show">
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
			<option value="6">6</option>
			<option value="7">7</option>
			<option value="8">8</option>
			<option value="9">9</option>
			<option value="10">10</option>
			<option value="11">11</option>
			<option value="12">12</option>
			<option value="13">13</option>
			<option value="14">14</option>
			<option value="15">15</option>
			<option value="16">16</option>
			<option value="17">17</option>
			<option value="18">18</option>
			<option value="19">19</option>
		</param>
		<param name="include_product_count" type="list" default="0" label="Include Product Count" description="Include a count of all products per category. Note that this could degrade your performance.">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="css_level" type="list" default="0" label="CSS class: level" description="Add a CSS-class for items level">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="css_firstlast" type="list" default="0" label="CSS class: first/last" description="Add a CSS-class for the first item or last item">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="css_evenodd" type="list" default="0" label="CSS class: even/odd" description="Add a CSS-class even/odd">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="class_sfx" type="text" default="" label="Menu Class Suffix" description="PARAMMENUCLASSSUFFIX" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
</install>
