<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>MageBridge: Store Switcher</name>
	<author>Yireo</author>
	<creationDate>December 2010</creationDate>
	<copyright>Copyright (C) 2011 Yireo.com. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>development@yireo.com</authorEmail>
	<authorUrl>www.yireo.com</authorUrl>
	<version>1.7.4276</version>
	<description>This module shows a listing of Magento stores</description>
	<files>
		<filename module="mod_magebridge_switcher">mod_magebridge_switcher.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

    <!--<languages>
        <language tag="en-GB">en-GB.mod_magebridge_switcher.ini</language>
    </languages>-->

	<params addpath="/administrator/components/com_magebridge/elements">
		<param name="store_id" type="storegroup" default="" label="Store Group" description="Which Magento store to use as parent" />
		<param name="layout" type="list" default="default" label="Type" description="Which layout to display">
			<option value="default">Full list (dropdown)</option>
			<option value="language">Language Selector (dropdown)</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="cache" type="list" default="0" label="Caching" description="Select whether to cache the content of this module">
			<option value="0">Never</option>
		</param>
	</params>
</install>
