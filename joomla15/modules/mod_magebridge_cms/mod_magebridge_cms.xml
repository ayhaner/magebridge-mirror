<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>MageBridge: CMS Static Block</name>
	<author>Yireo</author>
	<creationDate>March 2009</creationDate>
	<copyright>Copyright (C) 2009 Yireo.com. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>development@yireo.com</authorEmail>
	<authorUrl>http://www.yireo.com/</authorUrl>
	<version>1.7.4276</version>
	<description>This module shows a Magento CMS-block</description>
	<files>
		<filename module="mod_magebridge_cms">mod_magebridge_cms.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

    <languages>
        <language tag="en-GB">en-GB.mod_magebridge_cms.ini</language>
    </languages>

	<params>
		<param name="block" type="text" default="" label="Identifier" description="Insert identifier of CMS-block" />
		<param name="load_css" type="list" default="1" label="Load CSS" description="Include Magento CSS">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="load_js" type="list" default="1" label="Load JavaScript" description="Include Magento JavaScript">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
</install>
