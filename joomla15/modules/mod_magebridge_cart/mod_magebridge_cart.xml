<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>MageBridge: Cart</name>
	<author>Yireo</author>
	<creationDate>March 2009</creationDate>
	<copyright>Copyright (C) 2009 Yireo.com. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>development@yireo.com</authorEmail>
	<authorUrl>www.yireo.com</authorUrl>
	<version>1.7.4276</version>
	<description>This module shows the Magento shopping cart</description>
	<files>
		<filename module="mod_magebridge_cart">mod_magebridge_cart.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

    <languages>
        <language tag="en-GB">en-GB.mod_magebridge_cart.ini</language>
    </languages>

	<params>
		<param name="layout" type="list" default="default" label="Type" description="Which cart to display">
			<option value="default">Magento block</option>
			<option value="native">MageBridge code</option>
			<option value="ajax">AJAX lazy-loading</option>
		</param>
		<param name="load_css" type="list" default="1" label="Load CSS" description="Include Magento CSS">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="load_js" type="list" default="1" label="Load JavaScript" description="Include Magento JavaScript">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="cache" type="list" default="0" label="Caching" description="Select whether to cache the content of this module">
			<option value="0">Never</option>
		</param>
	</params>
</install>
